<section id="books" class="d-flex align-items-center" style="margin-bottom: 200px;">
  <div class="container position-relative">
    <div class="row card-boxes">
      {{#each books}}
      {{#each this}}
      {{#if this.ibnNumber}}
      <div class="col-md-4">
        <div class="card-box mt-4">
          <img src="/cover-images/{{this._id}}.jpg" alt="err" style="width: 16rem; height:20rem" />
          <h4 class="title"><a href="/bookField/{{this._id}}">{{this.bookName}}</a></h4>
          <p class="description">{{this.authorName}}</p>
          <a href="/bookField/{{this._id}}"><button class="button mt-2"><span>View</span></button></a>
        </div>
      </div>
      {{/if}}
      {{/each}}
      {{/each}}
    </div>
  </div>
</section>
