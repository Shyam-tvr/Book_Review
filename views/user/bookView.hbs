<section class="pt-5 pl-5">
  <div class="row">
    <div class="col">
      {{#each details}}
        {{#if this.ibnNumber}}

          <div class="pt-5 pl-5">

            <img
              src="/cover-images/{{this._id}}.jpg"
              alt="err"
              srcset=""
              style="height: 300px;width:300px"
            />
          </div>
          <div>
            {{this.ibnNumber}}
            <br />
            {{this.bookName}}
            <br />
            {{this.authorName}}

            <br />
            {{this.language}}
            <br />{{this.description}}
            <br />{{this.purchaseLink}}
            <br />
            {{this.yearOfPublication}}
            <br />{{this.Genre}}

          </div>
        {{/if}}
      {{/each}}
    </div>
    <div class="col"> 
        <h3>comments</h3>
        <hr>
      {{#each review}}
        {{#each this}}
          {{#if this.comment}}
            <p>{{this.comment}}</p>
             <p>rating:{{this.rate}}</p>
          {{/if}}
        {{/each}}
      {{/each}}
    </div>
  </div>

</section>