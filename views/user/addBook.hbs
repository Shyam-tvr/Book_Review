<div class="container contact-form">
            <div class="contact-image">
                <img src="https://png.pngtree.com/png-clipart/20190905/original/pngtree-book-pencil-study-book-png-image_4507678.jpg" alt="rocket_contact"/>
            </div>
            <form method="post" action="/booksAddToDb" enctype="multipart/form-data">
                <h3>Add Book</h3>
               <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="ibnNumber" class="form-control" placeholder="IBN Number*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="bookName" class="form-control" placeholder="Book Name*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="authorName" class="form-control" placeholder="Author Name*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="language" class="form-control" placeholder="Language*" value="" />
                        </div>
                        <div class="form-group">
                            Cover Image
                            <input type="file" name="bookImage" class="form-control" placeholder="image*" value="" />
                        </div>
                        
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="description" class="form-control" placeholder="Description*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="purchaseLink" class="form-control" placeholder="Link to purchase*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="yearOfPublication" class="form-control" placeholder="Year of Publication*" value="" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="Genre" class="form-control" placeholder="Genre*" value="" />
                        </div>
                        <br>
                        <div class="form-group">
                            <button type="submit"  class="btnContact">Add Book</button>
                        </div>
                        
                    </div>
                </div>
            </form>
</div>