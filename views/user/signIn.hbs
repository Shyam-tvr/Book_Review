<section class="Form my-4 mx-5">
    <div class="container">
        <div class="row no-gutters ">
            <div class="col-lg-5 ">
                <img src="https://image.freepik.com/free-photo/books-randomly-stacked-shelf_23-2147846041.jpg" class=""
                    alt="">
            </div>
            <div class="col-lg-7 px-5 pt-5 pb-5">
                <h1 class="font-weight-bold py-3">BookView</h1>
                <h3>User Login</h3>
                <form action="/signIn" id="login" method="POST">
                    <div class="form-row">
                        <div class="col-lg-7">
                            <input type="email" name="email" class="form-control my-3 p-4" placeholder="Email">

    <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row no-gutters ">
                <div class="col-lg-5 ">
                    <img src="https://image.freepik.com/free-photo/books-randomly-stacked-shelf_23-2147846041.jpg"
                        class="" alt="">
                </div>
                <div class="col-lg-7 px-5 pt-5 pb-5">
                    <h1 class="font-weight-bold py-3">BookView</h1>
                    <h3>User Login</h3>
                    <form action="/signIn" id="login" method="POST">
                        <div class="form-row">
                            <div class="col-lg-7">
                                {{#if mailErr}}
                                  <div class="alert alert-danger" role="alert">
                                <p class="error">this mail id not registered</p>
                                  </div>
                                   {{/if}}
                                <input type="email" name="email" class="form-control my-3 p-4" placeholder="Email">
                               
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                 {{#if passErr}}
                                  <div class="alert alert-danger" role="alert">
                                <p class="error">incorrect password</p>
                                  </div>
                                   {{/if}}
                                <input type="password" name="password" class="form-control my-3 p-4" placeholder="Password">
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-7 ">
                            <button type="submit" class="btn1 mt-3 mb-5">Login</button>
                        </div>
                    </div>
                    <div>

                    </div>
                    New User??<a href="/signUpPage">Signup</a>
                    <br>
                </form>

            </div>

        </div>
    </div>
</section>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
<script>
    $("#login").validate({
        rules: {
            email: {
                required: true,
                email: true
            },
            password: {
                required: true
            },
        },
        messages: {
            email: "<b>*pls enter a valied email</b>",
            password: "<b>*pls enter the password</b>"
        }


    })

</script>
